         <div class="table-scroll-wrap">
         <table class="table searchTable">
             <thead>
            <tr>
                <th scope="col">Course ID</th>
                <th scope="col">Course Name</th>
                <th scope="col">Credit Hours</th>
                <th scope="col">Term</th>
                <th scope="col"> Action </th>
              
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <th scope="row">{{this.course_id}}</th>
                <td>{{this.course_name}}</td>
                <td>{{this.credit_hours}}</td>
                <td>{{this.term}}</td>
                <td>
                    <form action='/addStudentClass' method="POST">
                    <!-- preventDefault stops the add button from doing anything else that it shouldn't -->
                    <button type = 'submit' class="btn btn-success" onclick="preventDefault(); closeSearchBar();">Add</button>
                    <input type="hidden" name="course_id" value="{{this.course_id}}">

                </td>       
                </form>  </tr>
            {{/each}}
        </tbody>
    </table>
    </div>