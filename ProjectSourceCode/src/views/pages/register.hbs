<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Page</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../../resources/css/style.css">
</head>

<body>
    <div class="container vh-100 d-flex align-items-center justify-content-center">
        <div class="row w-100 shadow p-3 bg-white rounded">
            <!-- Logo on the left -->
            <div class="col-md-6 d-flex align-items-center justify-content-center">
                <img src="../../resources/img/logo_text.jpeg" alt="Logo" class="img-fluid">
            </div>

            <!-- Registration form on the right -->
            <div class="col-md-6 p-4">
                <h2 class="text-center">Register</h2>
                <form id="registrationForm" action="/register" method="POST">
                    <div class="form-group">
                        <label for="name">Name (First, Last)</label>
                        <input type="text" id="name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="username">Identikey</label>
                        <input type="text" id="username" name="username" required>
                    </div>

                    <div class="form-group">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" id="password" name="password" class="form-control" required>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" name="advisor" id="advisor">
                        <label class="form-check-label" for="advisor">Are you an Advisor?</label>
                    </div>

                    <button type="submit" class="btn custom-btn w-100">Next</button>
                </form>
                <div class="text-center mt-3">
                    Already have an account? <a href="/login" class="theme-link">Login here</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('registrationForm').addEventListener('submit', function (e) {
            // Prevent form submission to handle redirection
            e.preventDefault();

            // Check if the "advisor" checkbox is checked
            var isAdvisor = document.getElementById('advisor').checked;
            console.log('Checkbox checked:', isAdvisor);

            // Redirect based on the checkbox status
            if (isAdvisor) {
                window.location.href = '/register_advisor';
            } else {
                window.location.href = '/register_student';
            }
        });
    </script>


</body>

</html>