<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Advisor - Student Schedule</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link rel="stylesheet" href="../../resources/css/style.css"/>
</head>
<body>
  <div class="main-container d-flex">
    <!-- Sidebar -->
    <div class="sidebar p-3">
      <h2>Advisor Dashboard</h2>
      <h5>Welcome, <a>{{user.identikey}}</a></h5>

      <div class="student-select">
        <h5>Select Student</h5>
        <select id="student-dropdown" class="form-select mb-3" onchange="loadStudentSchedule()">
          <option value="">-- Select a student --</option>
        </select>
      </div>

      <div id="student-info-panel" style="display: none;">
        <h5>Student Information</h5>
        <p><strong>Name:</strong> <span id="student-name"></span></p>
        <p><strong>ID:</strong> <span id="student-id"></span></p>
        <p><strong>Year:</strong> <span id="student-year"></span></p>
        <p><strong>Email:</strong> <span id="student-email"></span></p>
        <p><strong>Courses:</strong> <span id="student-courses"></span></p>
      </div>

      <div id="advisor-notes-panel" style="margin-top: 1rem;">
        <h5>Advisor Notes</h5>
        <textarea id="advisor-notes" class="form-control" rows="5" placeholder="Enter notes here..."></textarea>
        <button onclick="saveAdvisorNotes()" class="btn btn-primary mt-2">Save Notes</button>
      </div>
    </div>

    <!-- Content Area -->
    <div class="content">
      <div class="scroll-container">
        <div class="semester"><h3>Semester 1</h3><div id="sem0" class="classes-container"></div></div>
        <div class="semester"><h3>Semester 2</h3><div id="sem1" class="classes-container"></div></div>
        <div class="semester"><h3>Semester 3</h3><div id="sem2" class="classes-container"></div></div>
        <div class="semester"><h3>Semester 4</h3><div id="sem3" class="classes-container"></div></div>
        <div class="semester"><h3>Semester 5</h3><div id="sem4" class="classes-container"></div></div>
        <div class="semester"><h3>Semester 6</h3><div id="sem5" class="classes-container"></div></div>
        <div class="semester"><h3>Semester 7</h3><div id="sem6" class="classes-container"></div></div>
        <div class="semester"><h3>Semester 8</h3><div id="sem7" class="classes-container"></div></div>
      </div>
    </div>
  </div>

  <!-- Script -->
  <script>
    const students = {{{real_students}}};
    const defaultStudentId = '{{defaultStudentKey}}';

    window.onload = function () {
      const dropdown = document.getElementById('student-dropdown');
      for (const identikey in students) {
        const student = students[identikey];
        const option = document.createElement('option');
        option.value = identikey;
        option.textContent = `${student.first_name} ${student.last_name} (${identikey})`;
        if (identikey === defaultStudentId) option.selected = true;
        dropdown.appendChild(option);
      }
      loadStudentSchedule(defaultStudentId);
    };

    function loadStudentSchedule(selectedId = null) {
      const studentId = selectedId || document.getElementById("student-dropdown").value;
      const student = students[studentId];
      if (!student) return;

      document.getElementById("student-info-panel").style.display = 'block';
      document.getElementById("student-name").textContent = `${student.first_name} ${student.last_name}`;
      document.getElementById("student-id").textContent = student.identikey;
      document.getElementById("student-year").textContent = student.year || 'N/A';
      document.getElementById("student-email").textContent = student.email || 'N/A';

      const allCourses = Object.values(student.scheduledCourses || {}).flat();
      const courseNames = allCourses.map(c => c.course_id).join(', ');
      document.getElementById("student-courses").textContent = courseNames || 'N/A';

      document.getElementById("advisor-notes").value = student.notes || '';

      clearSchedule();

      for (let i = 0; i < 8; i++) {
        const semesterCourses = student.scheduledCourses?.[i];
        const container = document.getElementById(`sem${i}`);
        if (semesterCourses && container) {
          semesterCourses.forEach(course => {
            const div = document.createElement("div");
            div.className = 'class-block';
            div.textContent = `${course.course_id}`;
            container.appendChild(div);
          });
        }
      }
    }

    function clearSchedule() {
      for (let i = 0; i < 8; i++) {
        const container = document.getElementById(`sem${i}`);
        if (container) container.innerHTML = '';
      }
    }

    async function saveAdvisorNotes() {
      const studentId = document.getElementById("student-dropdown").value;
      const notes = document.getElementById("advisor-notes").value;

      try {
        const response = await fetch('/save-notes', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            identikey: studentId,
            notes: notes
          })
        });

        if (response.ok) {
          alert('Notes saved successfully!');
        } else {
          alert('Failed to save notes.');
        }
      } catch (error) {
        console.error('Error saving notes:', error);
        alert('Error saving notes.');
      }
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>